# Runtime
NODE_ENV=production

# Backend
PORT=4000
DATABASE_URL=postgresql://ravi_user:replace-with-strong-db-password@postgres:5432/ravi_db
JWT_SECRET=replace_with_a_minimum_32_characters_jwt_secret_key
JWT_EXPIRES=15m
JWT_REFRESH_SECRET=replace_with_a_minimum_32_characters_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d
CORS_ORIGIN=https://your-domain.com
REDIS_URL=redis://redis:6379
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=120
BCRYPT_ROUNDS=12
OTP_SECRET=replace_with_a_minimum_32_characters_otp_secret
OTP_EXPIRES_SECONDS=120
OTP_RATE_LIMIT_SECONDS=60
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASS=smtp-password
MAX_FILE_SIZE=10485760
ENABLE_CSRF=true

# Frontend
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_SENTRY_DSN=

# Database service credentials
POSTGRES_DB=ravi_db
POSTGRES_USER=ravi_user
POSTGRES_PASSWORD=replace-with-strong-db-password
